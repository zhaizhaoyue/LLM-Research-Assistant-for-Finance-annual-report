### Top-8: Apple 2023 10-K main sources of revenue
POST http://localhost:9200/finance-chunks/_search
Content-Type: application/json

{
  "size": 8,
  "query": {
    "bool": {
      "filter": [
        { "term": { "ticker": "AAPL" }},
        { "term": { "form": "10-K" }},
        { "term": { "fy": 2023 }}
      ],
      "should": [
        {
          "multi_match": {
            "query": "sources of revenue net sales by product by region segment information",
            "fields": ["content^3", "heading^4", "title^2"],
            "type": "best_fields",
            "operator": "or"
          }
        },
        { "match_phrase": { "content": { "query": "net sales", "boost": 2.0 } } },
        { "match_phrase": { "content": { "query": "Segment Information", "boost": 1.5 } } }
      ],
      "minimum_should_match": 1
    }
  },
  "highlight": { "fields": { "content": {} } }
}
